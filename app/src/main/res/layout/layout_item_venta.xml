<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="1dp">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:id="@+id/text_view_number_pedido_1"
            android:textSize="8pt"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_view_number_pedido_1"
            android:id="@+id/text_view_number_pedido_2"
            android:textSize="8pt"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/text_view_number_pedido_2"
            android:id="@+id/text_view_number_pedido_3"
            android:textSize="8pt"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_view_name_pedido_1"
            android:layout_toEndOf="@+id/text_view_number_pedido_1"
            android:layout_alignParentTop="true"
            android:textSize="8pt"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_number_pedido_1" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_view_name_pedido_2"
            android:layout_toEndOf="@+id/text_view_number_pedido_2"
            android:layout_below="@+id/text_view_name_pedido_1"
            android:textSize="8pt"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_number_pedido_2" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/text_view_name_pedido_3"
            android:layout_toEndOf="@+id/text_view_number_pedido_3"
            android:layout_below="@+id/text_view_name_pedido_2"
            android:textSize="8pt"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_view_number_pedido_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Ver pedido >"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/click_view_ruta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground" />

</android.support.v7.widget.CardView>

